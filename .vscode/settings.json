{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "files.eol": "\n",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        ".tmp": true
    },
    "files.exclude": {
        ".tmp": true
    },
    "search.exclude": {
        ".tmp": true
    },
    "json.schemas": [
        {
            "fileMatch": ["/pbiviz.json"],
            "url": "./node_modules/powerbi-visuals-api/schema.pbiviz.json"
        },
        {
            "fileMatch": ["/capabilities.json"],
            "url": "./node_modules/powerbi-visuals-api/schema.capabilities.json"
        },
        {
            "fileMatch": ["/dependencies.json"],
            "url": "./node_modules/powerbi-visuals-api/schema.dependencies.json"
        }
    ],
    "cSpell.words": ["tooltips"],
    "peacock.color": "#f2c811",
    "peacock.affectActivityBar": false,
    "workbench.colorCustomizations": {
        "sash.hoverBorder": "#f5d341",
        "statusBar.background": "#f2c811",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#c5a20b",
        "statusBarItem.remoteBackground": "#f2c811",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#f2c811",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#f2c81199",
        "titleBar.inactiveForeground": "#15202b99",
        "commandCenter.border": "#15202b99"
    },
    "peacock.remoteColor": "#f2c811"
}
